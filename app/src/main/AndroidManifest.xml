<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".ChallengeApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Challenge"
        tools:targetApi="31">
        <activity
            android:name=".activities.StartChatActivity"
            android:exported="false"
            android:label="@string/title_activity_start_chat"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Challenge" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Challenge" />
        <activity
            android:name=".activities.LoginRegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_login_register"
            android:theme="@style/Theme.Challenge" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Challenge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Challenge"></activity>
    </application>

</manifest>